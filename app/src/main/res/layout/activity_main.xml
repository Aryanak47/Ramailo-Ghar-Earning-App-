<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="230dp"
                android:layout_margin="10dp"
                android:background="@drawable/rankbg">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_above="@+id/rank"
                    android:src="@drawable/trophy"
                    android:layout_centerInParent="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Rank "
                    android:id="@+id/rank"
                    android:textStyle="italic"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/lato_bold" />

                <TextView
                    android:id="@+id/rank_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rank"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/lato_bold"
                    android:text="12 "
                    android:textColor="#fff"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="169dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/carddashboard">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="90dp"
                        android:id="@+id/dash_profile"
                        android:layout_height="80dp"
                        android:src="@drawable/image"
                        app:civ_border_color="#fff"
                        android:layout_alignParentRight="true"
                        app:civ_border_width="2dp"
                        app:civ_shadow="true"
                        app:srcCompat="@drawable/ic_person1_24dp"
                        app:civ_shadow_color="#fff"
                        app:civ_shadow_radius="10dp" />

                    <TextView
                        android:layout_above="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balance"
                        android:id="@+id/amount_txt"
                        android:textStyle="italic"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/lato_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs.1000"
                        android:id="@+id/amount"
                        android:textStyle="italic"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/lato_bold" />
                </RelativeLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:alpha="0.8"
                    android:id="@+id/withdrawbuttn"
                    android:background="@drawable/black_btn"
                    android:text="Withdraw"
                    android:textSize="23dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:id="@+id/fblike_img"
                    android:src="@drawable/facebookboost" />

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/fblike_img"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:alpha="0.8"
                    android:id="@+id/boost_fb"
                    android:background="@drawable/black_btn"
                    android:text="Boost Facebook Page"
                    android:textSize="23dp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:id="@+id/youtube_img"
                    android:src="@drawable/boostyou" />

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/youtube_img"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:alpha="0.8"
                    android:id="@+id/boost_youtube"
                    android:background="@drawable/black_btn"
                    android:text="Boost Youtube channel"
                    android:textSize="23dp" />


            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Earn Money By"
            android:textAlignment="center"
            android:textSize="37sp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/lato_bold" />

        <View
            android:layout_width="230dp"
            android:layout_height="4dp"
            android:background="@drawable/background"
            android:layout_gravity="center_horizontal" />

        <RelativeLayout
            android:id="@+id/facebook_like"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fblike_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Liking Facebook Page"
                android:textSize="22sp"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/lato_bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/subscribe_youtube"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/youtube_subs">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Subcribing youtube"
                android:textSize="22sp"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/lato_bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/watch_video"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/watch_video">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Watching Videos"
                android:textSize="22sp"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/lato_bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/watch_ads"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/watch_ads">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Watching Ads"
                android:textSize="22sp"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/lato_bold" />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>